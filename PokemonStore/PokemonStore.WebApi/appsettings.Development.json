{
    "Logging": {
        "LogLevel": {
            // global level
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Logging.Data.PokemonRepository": "Warning",
            "DataAccessLayer": "Information"
        }
        //"Console": {
        //  "LogLevel": {
        //    "Default": "Information",
        //    "Microsoft.AspNetCore": "Information"
        //  }
        //},
        //"Debug": {
        //  "LogLevel": {
        //    "Default": "Debug",
        //    "Microsoft.AspNetCore": "Debug"
        //  }
        //}
    },
    "Serilog": {
        "Using": [ "Serilog.Sinks.File" ],
        "MinimumLevel": {
            "Default": "Information"
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "../logs/webapi-.log",
                    "rollingInterval": "Day",
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {CorrelationId} {Level:u3} {Username} {Message:lj}{Exception}{NewLine}"
                }
            }
        ]
    }
}
